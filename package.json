{
  "name": "xcode-preview-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server that captures Xcode preview screenshots via ScreenCaptureKit and Accessibility APIs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "build:helper-app": "xcodebuild -project XcodePreviewMCPHelperApp/XcodePreviewMCPHelperApp.xcodeproj -scheme XcodePreviewMCPHelperApp -configuration Release -derivedDataPath XcodePreviewMCPHelperApp/build CODE_SIGNING_ALLOWED=NO"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.18.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
